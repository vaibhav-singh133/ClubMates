@model Clubmates.Web.Models.AccountViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="clubmates-form-container">
    <form method="Post" asp-controller="Account" asp-action="Register" class="form">
        <div><h4>Create account with us</h4></div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label htmlfor="FullName">Full Name</label>
            <input type="text" id="FullName" name="FullName" value="@Model.FullName" class="form-control" asp-for="FullName" />
        </div>
        <div class="form-group">
            <label htmlfor="Email">Email</label>
            <input type="email" id="Email" name="Email" value="@Model.Email" class="form-control" asp-for="Email" />
        </div>
        <div class="form-group">
            <label htmlfor="Password">Password</label>
            <input type="password" id="Password" name="Password" class="form-control" value="@Model.Password" asp-for="Password" />
        </div>
        <div class="form-group">
            <label htmlfor="ConfirmPassword">Confirm Password</label>
            <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" value="@Model.ConfirmPassword" asp-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
    </form>
</div>