@model IEnumerable<Clubmates.Web.Models.AdminViewModel.ClubViewModel>
@{
    ViewBag.Title = "Manage Club";
}
<div class="form-container">
    @if (Model != null && Model.Any())
    {
        <div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Club Name</th>
                        <th>Club Category</th>
                        <th>Club Type</th>
                        <th>Club Manager</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var club in Model)
                    {
                        <tr>
                            <td>@club.ClubName</td>
                            <td>@Enum.GetName(club.ClubCategory)</td>
                            <td>@Enum.GetName(club.ClubType)</td>
                            <td>@club.ClubManager</td>
                            <td>
                                <a asp-controller="Admin" asp-action="EditClub" asp-route-clubId="@club.ClubId" class="btn btn-primary">Edit</a>
                                <a asp-controller="Admin" asp-action="DeleteClub" asp-route-clubId="@club.ClubId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
            <div class="alert alert-warning" role="alert">
                No clubs found.
            </div>
    }
    <a asp-controller="Admin" asp-action="CreateClub" class="btn btn-primary">Create New Club</a>
</div>