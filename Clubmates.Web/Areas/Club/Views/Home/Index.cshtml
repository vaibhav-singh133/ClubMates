@model Clubmates.Web.Models.ClubViewModel.CustomerClubViewModel
@{
    ViewBag.Title = "Home";
    Layout = ViewData["Layout"]?.ToString() ?? "";
}
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-body-tertiary">
    <div class="club-banner-background background-overlay"
         style="background-image:url('data:image;base64,@Convert.ToBase64String(Model.ClubBanner ?? [])');
                background-size: cover;
                opacity: .5;
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: -1;">
    </div>
    <div class="col-md-6 p-lg-5 mx-auto my-5">
        <h1 style="opacity:1">@Model.ClubName</h1>
    </div>
    <div class="col-md-6 p-lg-5 mx-auto my-5">
        <p style="opacity:1">@Model.ClubDescription</p>
    </div>
</div>

<p>@Model.ClubEmail</p>
<p>@Model.ClubContactNumber</p>
<p>@Model.ClubCategory</p>
<p>@Model.ClubType</p>

<input type="hidden" id="ClubId" name="ClubId" value="@Model.ClubId" />